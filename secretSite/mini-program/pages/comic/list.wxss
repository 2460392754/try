/* pages/comic/list.wxss */

.comic-item {
  display: inline-block;
  width: 210rpx;
  height: 258rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
  border: 1rpx solid #ddd;
}

.comic-item__cover {
  width: 100%;
  height: 100%;
}

.comic-item__name {
  width: 100%;
  padding: 20rpx 0 10rpx;
  height: 30rpx;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%, rgba(0, 0, 0, 0.6) 100%);
  position: absolute;
  left: 0;
  bottom: 0;
  white-space: nowrap;
  font-size: 20rpx;
  line-height: 30rpx;
  color: #fff;
  text-align: center;
}