page{
  height: 100%;
}
.container{
  height: 100%;
  background: #eee;
  position: relative;
}
.image_box{
  height: 100%;
  width: 100%;
  position: absolute;
  z-index: 1;
  font-size: 0;
}
.image_box image{
  height: 100%;
  width: 100%;
} 

.option_box{
  height: 100%;
  width: 100%;
  position: relative;
  z-index: 3;
}

.paging{
  flex: 1;
  /* background:rgba(255,0,0,0.1); */
  /* border: 3px solid black; */
}

.center_box{
  width: 400rpx;
  height: 600rpx;
  position: absolute;
  top: 0;bottom: 0;left: 0;right: 0;
  margin:auto;
  z-index: 4;
  /* background:rgb(0,255,255); */
  /* border: 3px solid black; */
  border-radius: 100%;
  opacity: 0;
}
.center_box_show{
  opacity: 0.2;
}

.static_box{
  width: 100%;
  height: 100%;
  top: 0;left: 0;
  position: absolute;
  z-index: 2;
  opacity: .6;
}

.box_hide{
  opacity: 0!important;
}

/* 所有动作都要动画 */
view{  
  transition:all 0.4s;
  transition-timing-function: ease;
}
.current_number{
  position: absolute;
  top: 15rpx;left: 15rpx;
  padding: 15rpx 25rpx;
  background: #eee;
  opacity: 0.8;
  border-radius: 25rpx;
  z-index: 3;
}
.preload_number{
  position: absolute;
  top: 15rpx;right: 15rpx;
  padding: 15rpx 25rpx;
  background: #eee;
  opacity: 0.8;
  border-radius: 25rpx;
  z-index: 3;
}