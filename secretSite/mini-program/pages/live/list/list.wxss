/* pages/vid/vidlist.wxss */

.live-item {
  display: inline-block;
  width: 210rpx;
  height: 260rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}

.live-item__cover {
  width: 100%;
  height: 100%;
}

.live-item__name {
  width: 100%;
  padding: 40rpx 0 20rpx;
  height: 30rpx;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%, rgba(0, 0, 0, 0.8) 100%);
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #fff;
  text-align: center;
}

.live-item--playing{
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  font-size: 24rpx;
  background: #f55;
  color: #fff;
}