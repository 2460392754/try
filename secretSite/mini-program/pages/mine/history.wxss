/* pages/mine/mine.wxss */
page{
  background: #eee;
}
.history-list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.history-item{
  width: 360rpx;
  height: 300rpx;
  background: #fff;
  margin-bottom: 30rpx;
  position: relative;
}
.history-item:nth-child(even){
  margin-left: 30rpx;
}
.type, .name, .date{
  padding: 3rpx;
  border-radius: 10rpx;
  position: absolute;
  background: rgba(255, 255, 255, .6);
  color: #333;
  font-size:24rpx;
}
.type{
  left: 5rpx;
  bottom: 5rpx;
}
.name{
  left: 5rpx;
  top: 5rpx;
}
.date{
  right: 5rpx;
  bottom: 5rpx;
}

.history-cover{
  width: 100%;
  height: 100%;
}

.clear{
  background: pink;
  color: #fff;
  padding: 20rpx;
  position: fixed;
  right: 5rpx;
  bottom: 5rpx;
}